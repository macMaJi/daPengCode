<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_handler_use"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/sha_normal_button"
        android:textColor="@color/color_FFFFFF"
        android:text="@string/handler_use_optimize" />

    <TextView
        android:id="@+id/tv_handler_optimize1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/sha_normal_button"
        android:textColor="@color/color_FFFFFF"
        android:text="@string/handler_optimize_static" />

    <TextView
        android:id="@+id/tv_handler_optimize2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:background="@drawable/sha_normal_button"
        android:textColor="@color/color_FFFFFF"
        android:text="@string/handler_optimize_weak" />
</LinearLayout>